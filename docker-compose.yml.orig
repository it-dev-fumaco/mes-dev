version: '3.8'

services:
  web:
    image: fumacojave/mes:version-12.4
    build:
      target: web
      context: .
    env_file:
      - .env
    ports:
      - "8081:80"
      - "8443:443"
    volumes:
      - .:/var/www/html
      - /home/mes-files/httpd.conf:/etc/apache2/httpd.conf
      - /home/mes-files/sites-available:/etc/apache2/sites-available
      - /home/mes-files/ssl:/etc/apache2/ssl
    depends_on:
      - db
    environment:
      - APACHE_RUN_SSL=true
  db:
    platform: "linux/amd64"
    image: mysql:5.7
    env_file:
      - .env
    environment:
      MYSQL_ROOT_PASSWORD: root
      MYSQL_DATABASE: ${DB_DATABASE}
      MYSQL_USER: ${DB_USERNAME}
      MYSQL_PASSWORD: ${DB_PASSWORD}
    ports:
      - "3306:3306"
    volumes:
      - dbdata:/var/lib/mysql

volumes:
  dbdata: